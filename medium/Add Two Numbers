class Solution {
    public ListNode addTwoNumbers(ListNode l1, ListNode l2) {
//a нужно для того чтобы при добавлении чисел не возникало никаких проблем это начало связанного списка который по сути нужен просто для облегчения логики программы(фиктивный головной узел)
    ListNode a = new ListNode(0);
// b это как бы хвост списка при каждом добавлении он будет двигаться вперед 
    ListNode b = a;
    int carry = 0;
// главный цикл, который обеспечивает то, что мы пройдем по всем цифрам входного списка и обработаем перенос 
    while (l1 != null || l2 != null || carry != 0) {
        //Получаем числовые значения из l1 и l2 соответсвенно , если это значение null присваиваем 0, чтобы не выскочило исключение (NullPointerException)
        int digit1 = (l1 != null) ? l1.val : 0;
        int digit2 = (l2 != null) ? l2.val : 0;

        
// вычисляется полная сумма l1 и l2 с учетом переноса 
        int sum = digit1 + digit2 + carry;
// вычисляется число для текущего узла        
        int digit = sum % 10;
        carry = sum / 10;

// создается новый узел для списка 
        ListNode newNode = new ListNode(digit);
        
//Старый b становится newNode         
        b.next = newNode;
// устанавливает b так, чтобы он всегда указывал на последний узел в списке       
        b = b.next;
        
// Передвигаем на новый узел, но если он равен null, приравниваем к null, чтобы не выскакивало исключение
        l1 = (l1 != null) ? l1.next : null;
        l2 = (l2 != null) ? l2.next : null;
    }
// Создается переменная, которая идет после фиктивного узла a   
    ListNode res = a.next;
// Тут мы обрезаем фиктивный узел, так как он нам не нужен     
    a.next = null;
//Возвращаем результат     
    return res;

    }
}

// digit примитив, поэтому 0 
// l1.val же ссылочный тип данных, поэтому null
